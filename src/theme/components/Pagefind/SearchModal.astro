---
import PagefindTemplates from './PagefindTemplates.astro'
---

<!-- Search Button (Sticky) -->
<button
	id="search-button"
	class="fixed bottom-8 right-8 z-40 w-14 h-14 bg-blue-500 hover:bg-blue-600 text-white rounded-full shadow-lg hover:shadow-xl transition-all duration-200 flex items-center justify-center"
	aria-label="æœç´¢"
>
	<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
		<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
	</svg>
</button>

<!-- Search Modal -->
<pagefind-mask data-blur="true" class="fixed inset-0 bg-black/50 z-50 hidden">
	<div class="fixed inset-0 flex items-start justify-center pt-20 px-4">
		<pagefind-search-input class="w-full max-w-2xl">
			<div class="bg-white/90 dark:bg-gray-900/90 backdrop-blur-md rounded-2xl shadow-2xl overflow-hidden">
				<!-- Search Input -->
				<div class="p-6 border-b border-gray-200 dark:border-gray-700">
					<div class="relative flex items-center gap-3">
						<input
							type="text"
							class="flex-1 text-2xl bg-transparent border-none outline-none text-gray-900 dark:text-gray-100 placeholder-gray-400"
							placeholder="ðŸ” æœç´¢æ–‡ç« ..."
							autofocus
						/>
						<button class="hidden text-gray-400 hover:text-gray-600 dark:hover:text-gray-200 transition-colors">
							<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
							</svg>
						</button>
					</div>
				</div>

				<!-- Search Results -->
				<pagefind-search-results class="p-4 overflow-y-auto">
				</pagefind-search-results>
			</div>
		</pagefind-search-input>
	</div>
</pagefind-mask>

<PagefindTemplates />

<script>
	// Import custom elements
	import './PagefindMask'
	import './PagefindSearchInput'
	import './PagefindSearchResults'
	import './PagefindSearchResultItem'

	// Search button click handler
	const searchButton = document.getElementById('search-button')
	const mask = document.querySelector('pagefind-mask')
	const input = document.querySelector('pagefind-search-input input') as HTMLInputElement

	searchButton?.addEventListener('click', () => {
		mask?.classList.remove('hidden')
		input?.focus()
	})
</script>
